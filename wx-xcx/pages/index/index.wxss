/**index.wxss**/
.container{
}
.head{
  margin: 20px 0 10px;
  padding: 0px 20px;
  font-size: 18px;
  font-weight: bold;
}
.yl-lines{
  padding: 0px 20px;
}
.yl-line{
  padding: 10px 0;
  border-bottom: 1px  dashed #ddd;
}
.yl-line:first-child{
  border-top: 1px  dashed #ddd;
}

.yl-line .title{
  line-height: 24px;
}
.yl-line .message{
  font-size: 12px;
  color: #999;
  line-height: 24px;
}

.yl-points{
  padding: 0px 20px;
}
.yl-point{
  padding: 20px;
  margin: 20px 0;
  border-radius: 6px;
  box-shadow: -4px 0px 4px #eee, 0px -4px 4px #eee , 4px 0px 4px #eee, 0px 4px 4px #eee;
}
.yl-point .title{
  line-height: 20px;
  margin-bottom: 10px;
}

.yl-point .title .distance{
  margin-left: 6px;
  color: #999;
}

.paizi{
  display: inline-block;
  width: 14px;
  height: 14px;
  background: url('https://bus.xee.link/static/images/xcx/1.png') center no-repeat #1373c7;
  background-size: 10px 10px;
  vertical-align: center;
  border-radius: 2px;
  margin-right: 6px;
}
.noPoint{
  text-align: center;
  margin-top: 40px;
  font-size: 14px;
  color: #aaa;
}

.yl-point .message{
  color: #999;
  font-size: 14px;
}
