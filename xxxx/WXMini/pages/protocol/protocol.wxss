/* pages/webrtc-room/signature/signature.wxss */

.container-box{
  padding: 20px 20px;
  font-size: 16px;
  box-sizing: border-box;
  background-color: #242424;
  height: 100%;
  color: #fff;
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  overflow: hidden;
}

 .head{
    text-align: center;
  font-size: 20px;
  font-weight: bold;
}
 .info-text{
  box-sizing: border-box;
  width: 100%;
  height: 0;
  border: 1px #fff solid;
  flex: auto;
  padding: 10px;
  margin: 20px  0;
}

 .bottom{
  text-align: center;
}
.bottom button {
  background-color: #006eff;
  border-radius: 50px;
  width: 50vw;
  color: #fff;
}
