/* pages/webrtc-room-demo/join-room-by-id/joinRoomById.wxss */
@import "/iview/icon/index.wxss";

.container-box {
    display: flex;
    flex-flow: column nowrap;
    height: 100%;
    width: 100%;
    overflow: hidden;
}


/* 相机 */
.camera {
    background-color: #000;
    width: 100%;
    z-index: 10000000;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
}

.camera .change {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 2;
}

.camera .back {
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 2;
}

.camera .button {
    position: absolute;
    bottom: 20px;
    width: 60px;
    left: 50%;
    margin-left: -30px;
    height: 60px;
    border-radius: 50%;
    z-index: 2;
    background-color: #fff;
}

/*聊天信息*/
.info-box {
    width: 100%;
    height: 0;
    flex: auto;
    background-color: #ededed;
}

.info-box .content-box {
    padding: 10px;
}

.info-box .content-box .center {
    text-align: center;
    font-size: 12px;
    color: #333;
    margin-bottom: 4px;
}

.info-box .content-box .right {
    display: flex;
    flex-flow: nowrap row;
    justify-content: flex-end;
}
.avatar {
    height: 38px;
}
.info-box .content-box  .item {
    box-sizing: border-box;
    width: 70%;
    border-radius: 4px;
    position: relative;
}
.info-box .content-box .right .item {
    margin-right: 10px;
}
.info-box .content-box .left .item {
    margin-left: 10px;
}

.info-box .content-box .text{
    padding: 8px;
    background-color: #94ed6a;
    font-size: 14px;
    color: #000;
    line-height: 22px;
    word-break: break-all;
}
.info-box .content-box  .image image{
    max-width: 100%;
    border-radius: 4px;
}
.info-box .content-box  .file{
    padding: 8px;
    background-color: #fff;
    box-sizing: border-box;
    height: 70px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info-box .content-box  .file .file-info{
    flex: auto;
    width: 0;
}
.info-box .content-box .right .file .file-info{
    margin-right: 10px;
}
.info-box .content-box .left .file .file-info{
    margin-left: 10px;
}
.info-box .content-box  .file .file-info .name{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 18px;
    color: #000;
}
.info-box .content-box  .file .file-info .size{
    font-size: 14px;
    color: #333;
    text-transform: uppercase;
}
.info-box .content-box  .file image{
    width: 38px;
    height: 54px;
    flex: none;
}

.info-box .content-box   .item:before{
    content: ' ';
    width:10px;
    height:10px;
    background-color: #fff;
    transform: rotate(45deg);
    position: absolute;
    top:14px
}

.info-box .content-box .right  .item:before{
    right: -5px;
}
.info-box .content-box .left  .item:before{
    left: -5px;
}

.info-box .content-box  .text:before{
    background-color: #94ed6a;
}
.info-box .content-box  .image:before{
    width:0;
    height:0;
}

.info-box .content-box .left {
    display: flex;
    flex-flow: nowrap row;
}

/*文字输入框*/
.input-box {
    border-top: 1px solid #eee;
    width: 100%;
    flex: none;
    background-color: #f7f7f7;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    box-sizing: border-box;
    padding: 8px;
}

.input-box textarea {
    padding: 6px;
    background-color: #fff;
    width: 0;
    flex: auto;
    max-height: 120px;
}
.input-box  .send-message{
    background-color: #07c160;
    border-radius: 4px;
    color: #fff;
    font-size: 14px;
    margin: 4px;
    height: 27px;
    vertical-align: bottom;
    box-sizing: border-box;
    padding: 2px 10px;
    letter-spacing: 4px;
}

/*工具栏*/
.tools-box {
    z-index: 100;
    border-top: 1px solid #eee;
    width: 100%;
    height: 0;
    transition: height 0.4s, padding 0.4s;
    display: flex;
    flex: none;
    background-color: #f7f7f7;
    box-sizing: border-box;
    justify-content: space-between;
}

.tools-box.active {
    height: 110px;
    padding: 20px;
}

.tools-box .item {
    display: inline-block;
    text-align: center;
    flex: 1;
}

.tools-box .item .icon {
    background-color: #fff;
    display: inline-block;
    color: #363636;
    padding: 6px 16px;
    border-radius: 6px;
}

.tools-box .item .text {
    margin-top: 6px;
    font-size: 14px;
    color: #666;
}
