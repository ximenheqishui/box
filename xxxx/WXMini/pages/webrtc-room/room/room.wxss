@import "/iview/icon/index.wxss";

.container-box {
  background-image: url(http://192.168.199.147:3000/images/xcx/bg.png);
  background-color: #222;
  background-repeat: no-repeat;
  background-size: cover;
  height: 100vh;
  overflow: hidden;
}

.camera-box {
  width: 100vw;
  height: 100%;
}


.room-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
}

.link{
  position: absolute;
  right: 0;
  left: 0;
  color: #fff;
  bottom: 8vh;
  width: 100%;
}
.link .item{
  margin-bottom: 20px;
}

.link button {
  background-color: #006eff;
  border-radius: 50px;
  width: 50vw;
}
.link button .text{
  color: #ff621a;
}

